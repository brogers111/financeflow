generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User models for NextAuth - MUST use exact names PrismaAdapter expects
model User {
  id            String         @id @default(uuid())
  name          String?
  email         String?        @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  categories    Category[]
  budgetPeriods BudgetPeriod[]

  financialAccounts      FinancialAccount[]
  investmentPortfolios   InvestmentPortfolio[]
  categorizationPatterns CategorizationPattern[]
  paychecks              Paycheck[]
  healthMetrics          HealthMetric[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// NextAuth OAuth accounts - must be named "Account" for PrismaAdapter
model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("UserAccount")
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Financial models
model FinancialAccount {
  id          String          @id @default(uuid())
  userId      String
  user        User            @relation(fields: [userId], references: [id])
  name        String
  type        AccountType
  accountType AccountCategory @default(PERSONAL)
  institution String
  balance     Float           @default(0)
  currency    String          @default("USD")
  isActive    Boolean         @default(true)
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  transactions   Transaction[]
  balanceHistory BalanceSnapshot[]

  @@map("Account") // Maps to your existing Account table
}

enum AccountType {
  CHECKING
  SAVINGS
  CREDIT_CARD
  INVESTMENT
  CASH
}

enum AccountCategory {
  PERSONAL
  BUSINESS
}

model Transaction {
  id        String           @id @default(uuid())
  accountId String
  account   FinancialAccount @relation(fields: [accountId], references: [id], onDelete: Cascade)

  date        DateTime
  description String
  amount      Float
  type        TransactionType

  categoryId String?
  category   Category? @relation(fields: [categoryId], references: [id])

  wasManual  Boolean @default(false)
  confidence Float?

  source         String?
  rawDescription String?
  notes          String?

  linkedTransferId String?      @unique
  linkedTransfer   Transaction? @relation("TransferPair", fields: [linkedTransferId], references: [id], onDelete: SetNull)
  transferPair     Transaction? @relation("TransferPair")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([accountId, date])
  @@index([categoryId])
}

enum TransactionType {
  INCOME
  EXPENSE
  TRANSFER
}

model Category {
  id            String          @id @default(uuid())
  name          String
  type          TransactionType
  icon          String?
  color         String?
  parentId      String?
  parent        Category?       @relation("Subcategories", fields: [parentId], references: [id])
  subcategories Category[]      @relation("Subcategories")
  userId        String
  user          User            @relation(fields: [userId], references: [id], onDelete: Cascade)

  transactions           Transaction[]
  categorizationPatterns CategorizationPattern[]
  budgetLineItems        BudgetLineItem[]

  createdAt DateTime @default(now())

  @@unique([name, userId])
  @@index([type])
}

model BalanceSnapshot {
  id        String           @id @default(uuid())
  accountId String
  account   FinancialAccount @relation(fields: [accountId], references: [id], onDelete: Cascade)

  balance Float
  date    DateTime @default(now())

  @@index([accountId, date])
}

model Paycheck {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  amount    Float
  date      DateTime
  accountId String

  createdAt DateTime @default(now())

  @@index([userId, date])
}

model HealthMetric {
  id     String   @id @default(uuid())
  userId String
  user   User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  date   DateTime
  type   String
  value  Float
  unit   String
  source String?

  createdAt DateTime @default(now())

  @@index([date, type])
}

model CategorizationPattern {
  id                 String   @id @default(uuid())
  descriptionPattern String
  categoryId         String
  category           Category @relation(fields: [categoryId], references: [id])
  confidence         Float    @default(0.7)
  timesUsed          Int      @default(0)
  lastUsed           DateTime @default(now())
  userId             String
  user               User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@unique([userId, descriptionPattern])
  @@index([descriptionPattern])
}

model InvestmentPortfolio {
  id           String @id @default(uuid())
  name         String // "ROTH IRA", "401K", "TOD", etc.
  type         String // "ROTH", "401K", "TOD", "BROKERAGE"
  institution  String // "American Funds", "Fidelity", etc.
  currentValue Float  @default(0)
  userId       String
  user         User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  valueHistory InvestmentSnapshot[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("InvestmentPortfolio")
}

model InvestmentSnapshot {
  id          String              @id @default(uuid())
  portfolioId String
  portfolio   InvestmentPortfolio @relation(fields: [portfolioId], references: [id], onDelete: Cascade)

  value Float
  date  DateTime
  notes String?

  createdAt DateTime @default(now())

  @@map("InvestmentSnapshot")
}

model BudgetPeriod {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  startDate DateTime
  endDate   DateTime
  isPinned  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  lineItems BudgetLineItem[]

  @@index([userId, startDate, endDate])
}

model BudgetLineItem {
  id             String       @id @default(uuid())
  budgetPeriodId String
  budgetPeriod   BudgetPeriod @relation(fields: [budgetPeriodId], references: [id], onDelete: Cascade)

  categoryId String? // Nullable because "Uncategorized" is valid
  category   Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)

  description    String
  budgetAmount   Float
  actualAmount   Float? // Auto-calculated from transactions
  manualOverride Float? // User can override the auto-calculated amount

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([budgetPeriodId, categoryId])
}
